# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=gateway_user
DATABASE_PASSWORD=gateway_password
DATABASE_NAME=saas_gateway_db
DATABASE_SSL=false
DATABASE_URL=postgresql://gateway_user:gateway_password@postgres:5432/saas_gateway_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_URL=redis://:redis_password@redis:6379

# JWT (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_GROUP_ID=saas-gateway
KAFKA_CLIENT_ID=saas-gateway-client

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# AWS (Optional - Only if deploying to AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Multi-Tenancy
TENANT_HEADER=x-tenant-id
TENANT_ID_REGEX=^[a-z0-9-]{3,50}$

# Rate Limiting (requests per minute)
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_TENANT=500
RATE_LIMIT_PER_USER=100

# Logging
LOG_FORMAT=json
SENTRY_DSN=
