# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=gateway_user
DB_PASSWORD=gateway_password
DB_NAME=saas_gateway_db
DATABASE_URL=postgresql://gateway_user:gateway_password@postgres:5432/saas_gateway_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@redis:6379

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_TOPIC_PREFIX=saas-gateway

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Multi-Tenancy
TENANT_HEADER=x-tenant-id
TENANT_ID_REGEX=^[a-z0-9-]{3,50}$

# Rate Limiting (requests per minute)
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_TENANT=500
RATE_LIMIT_PER_USER=100

# Logging
LOG_FORMAT=json
SENTRY_DSN=
